<div class="container" style="margin:100px auto">
    {{!--fila 1--}}
    <div class="row">
        <div class="col">
            <p class="col-12 text-right"> Hola {{ persona }}!
                <a href="/admin/login/logout" class="btn btn-sm btn-danger">Cerrar sesi√≥n
                    <i class="fa fa-sign-out" aria-hidden="true"></i></a>
            </p>
        </div>
    </div>
    {{!--fin fila 1--}}
    {{!--fila 2--}}
    <div class="row">
        <div class="col-7" style="margin-top: 5px;">
            <h2>Listado de Novedades</h2>
        </div>
        <div class="col-2 text-right">
            <a href="novedades/agregar" class="btn btn-success"><i class="fas fa-plus"></i>Nuevo</a>
        </div>

        <div class="col-3 text-right">
            <form class="form-inline" action="/admin/novedades" method="get">
                <input class="form-control" type="search" placeholder="Buscar" aria-label="Search" name="q" {{#if q}}
                    value="{{q}}" {{/if}}>
                <button class="btn btn-secondary  " type="submit">
                    <i class="fa fa-search" aria-hidden="true"></i>
                </button>
            </form>
        </div>
        {{!--fin fila 2--}}

        <div class="row">
            <div class="col">
                <table class="table">
                    <thead class="thead-light">
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Titulo</th>
                            <th scope="col">Imagen</th>
                            <th scope="col" class="text-right">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each novedades}}
                        <tr>
                            <th scope="row">{{id}}</th>
                            <td>{{titulo}}</td>
                            <td>{{{imagen}}}</td>
                            <td class="text-right">
                                <a href="/admin/novedades/modificar/{{id}}" class="btn btn-secondary">
                                    <i class="fas fa-pencil-alt"></i>
                                </a>
                                <a href="/admin/novedades/eliminar/{{id}}" class="btn btn-secondary">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>

                {{#if is_search}}
                {{#unless novedades.length}}
                No se encontraron resultados para "<b>{{q}}</b>"
                {{/unless}}
                {{/if}}

            </div>
        </div>

    </div> {{!--fin container--}}